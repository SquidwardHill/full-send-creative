// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // output   = "./node_modules/@prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model CaseStudy {
  id            String @id @default(cuid())
  title         String
  slug          String @unique
  hook          String
  resumeSummary String
  tldr          String

  challenge    String
  task         String
  contribution String
  result       String
  themeColor   String @default("purple-pizzazz-500")

  tools  ProcessTool[]
  images Image[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProcessTool {
  id          String    @id @default(cuid())
  caseStudy   CaseStudy @relation(fields: [caseStudyId], references: [id])
  caseStudyId String

  tool   Tool     @relation(fields: [toolId], references: [id])
  toolId String
  role   ToolRole
}

model Tool {
  id          String        @id @default(cuid())
  name        String        @unique
  icon        String? // optional Iconify-compatible identifier
  website     String? // optional external link
  ProcessTool ProcessTool[]
}

enum ToolRole {
  PLANNING
  DESIGN
  FRONTEND
  BACKEND
  BUILD
  TESTING
  WORKFLOW
}

model Image {
  id          String    @id @default(cuid())
  caseStudy   CaseStudy @relation(fields: [caseStudyId], references: [id])
  caseStudyId String
  type        ImageType

  url         String
  alt         String?
  description String?
  tags        String[]  @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([caseStudyId, type])
}

enum ImageType {
  COVER
  PROCESS
}
